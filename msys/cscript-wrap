#!/bin/bash

terminate() {
    rm -f $_tf
    exit 255
}

_ext=${1##*.};
type mktemp >/dev/null 2>&1 && {
	_tf=`mktemp -t XXXXXX.$_ext`;
} || {
	_tf=/tmp/${RANDOM}.$_ext
}
unset _ext
trap terminate INT

{
  echo "/* temperary script file generated by $0 */"
  awk '{if (NR>=2){print $0 }}' $1
} >> $_tf

cscript //Nologo $_tf; r=$?

rm -f $_tf
exit $r
